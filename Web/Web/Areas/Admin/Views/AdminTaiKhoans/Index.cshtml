@model IEnumerable<Web.Models.TaiKhoan>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách tài khoản</span>
        </nav>
    </div>
</div>
<div class="col-lg-12 text-right">
    <a class="btn btn-primary" asp-controller="AdminTaiKhoans" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm tài khoản</span></a>
</div>

        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>SDT</th>
                        <th>Quyền truy cập</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.MaTaiKhoan
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                        <h6 class="m-b-0 m-l-10">@item.Email</h6>
                                    </div>
                                </td>
                                <td>@item.Sdt</td>
                                <td>@item.MaVaiTroNavigation.VaiTro1</td>
                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminTaiKhoans" asp-action="Details" asp-route-id="@item.MaTaiKhoan">View</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminTaiKhoans" asp-action="Edit" asp-route-id="@item.MaTaiKhoan">Edit</a>
                                    <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminTaiKhoans" asp-action="Delete" asp-route-id="@item.MaTaiKhoan">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    
                </tbody>
            </table>
        </div>
