@model Web.Models.HoaDon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa hóa đơn này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Ngày lập:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayLap)
        </dd>
        <dt class = "col-sm-2">
            <label>Tổng:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tong)
        </dd>
        <dt class = "col-sm-2">
            <label>Tên khách hàng:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaKhNavigation.TenKh)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaHd" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay trở lại</a>
    </form>
</div>
