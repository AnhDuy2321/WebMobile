@model Web.Models.SanPham

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa sản phẩm?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Tên sản phẩm:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSp)
        </dd>
        <dt class = "col-sm-2">
            <label>Số lượng:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
            <label>Giá:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt class = "col-sm-2">
            <label>Hình:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hinh)
        </dd>
        <dt class = "col-sm-2">
            <label>Mô tả:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            <label>Tên kho:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaKhoNavigation.TenSp)
        </dd>
        <dt class = "col-sm-2">
            <label>Tên loại:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaLoaiNavigation.TenLoai)
        </dd>
        <dt class = "col-sm-2">
            <label>Tên nhà sản xuất:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNsxNavigation.TenNsx)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaSp" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay trở lại</a>
    </form>
</div>
