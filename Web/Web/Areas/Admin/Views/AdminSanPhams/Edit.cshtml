@model Web.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm: " + Model.TenSp;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sửa</h1>

<h4>Thay đổi thông tin sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="AdminSanPhams" asp-action="Edit" asp-route-id="@Model.MaSp" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSp" />
            <input type="hidden" asp-for="Hinh" />
            <div class="form-group">
                <label asp-for="TenSp" class="control-label">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinh" class="control-label">Ảnh đại diện</label>
                <input asp-for="Hinh" name="hinh" type="file" class="form-control" />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label">Mã loại</label>
                <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNsx" class="control-label">Mã nhà sản xuất</label>
                <select asp-for="MaNsx" class="form-control" asp-items="ViewBag.MaNsx"></select>
                <span asp-validation-for="MaNsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKho" class="control-label">Mã kho</label>
                <select asp-for="MaKho" class="form-control" asp-items="ViewBag.MaKho"></select>
                <span asp-validation-for="MaKho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay trở lại</a>
</div>

