@model Web.Models.SanPham

@{
    ViewData["Title"] = "Thông tin chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminSanPhams" asp-action="Index">Dannh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin chi tiết sản phẩm</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin sản phẩm</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Tên sản phẩm:</td>
                        <td class="text-dark font-weight-semibold">@Model.TenSp
                        <td>
                    </tr>
                    <tr>
                        <td>Số lượng:</td>
                        <td>@Model.SoLuong</td>
                    </tr>
                    <tr>
                        <td>Giá:</td>
                        <td>@Model.Gia</td>
                    </tr>
                    <tr>
                        <td>Hình:</td>
                        <td>
                            <img width="510px" height="340px" src="~/images/sanpham/@Model.Hinh" />
                        </td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.MoTa</td>
                    </tr>
                    <tr>
                        <td>Tên Kho:</td>
                        <td>@Model.MaKhoNavigation.TenSp</td>
                    </tr>
                    <tr>
                        <td>Tên loại:</td>
                        <td>@Model.MaLoaiNavigation.TenLoai</td>
                    </tr>
                    <tr>
                        <td>Tên nhà sản xuất:</td>
                        <td>@Model.MaNsxNavigation.TenNsx</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>