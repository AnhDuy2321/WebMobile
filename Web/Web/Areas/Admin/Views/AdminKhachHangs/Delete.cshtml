@model Web.Models.KhachHang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Tên khách hàng:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenKh)
        </dd>
        <dt class="col-sm-2">
            <label>Địa chỉ:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            <label>Số điện thoại:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            <label>Ngày sinh:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            <label>Tài khoản:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>
        <dt class="col-sm-2">
            <label>Mật khẩu:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaKh" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay trở lại</a>
    </form>
</div>
