@model List<Web.ModelViews.CartItem>
@if(Model!=null && Model.Count()>0)
{
    <div class="harmic-offcanvas-body">
        <div class="minicart-content">
            <div class="minicart-heading">
                <h4 class="mb-0">Giỏ hàng</h4>
                <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
            </div>
            <ul class="minicart-list">
                @foreach(var item in Model)
                {
                    string url = $"/{item.sanpham.TenSp}-{item.sanpham.MaSp}.html";
                    <li class="minicart-product">
                        <a href="@url" class="product-item_img">
                            <img class="img-full" src="~/images/sanpham/@item.sanpham.Hinh" alt="@item.sanpham.TenSp">
                        </a>
                        <div class="product-item_content">
                            <a class="product-item_title" href="@url">@item.sanpham.TenSp</a>
                            <span class="product-item_quantity">@item.amount x @item.sanpham.Gia.Value.ToString("#,##0") VNĐ</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="minicart-item_total">
            <span>Tổng</span>
            <span class="ammount">@Model.Sum(x=>x.TotalMoney).Value.ToString("#,##0") VNĐ</span>
        </div>
        <div class="group-btn_wrap d-grid gap-2">
            <a href="cart.html" class="btn btn-secondary btn-primary-hover">Xem giỏ hàng</a>
            <a href="checkout.html" class="btn btn-secondary btn-primary-hover">Thanh toán</a>
        </div>
    </div>

}
else
{
    <div class="harmic-offcanvas-body">
        <div class="minicart-content">
            <div class="minicart-heading">
                <h4 class="mb-0">Giỏ hàng trống</h4>
            </div>
        </div>
    </div>
}
