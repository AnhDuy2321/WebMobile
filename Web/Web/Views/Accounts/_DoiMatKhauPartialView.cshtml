@model Web.ModelViews.DoiMatKhauModelView
<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="DoiMatKhau" method="post" class="myaccount-form">
        <div class="myaccount-form-inner">
            <div class="single-input">
                <label>Mật khẩu hiện tại</label>
                <input asp-for="MatKhauHienTai" type="password">
            </div>
            <div class="single-input">
                <label>Mật khẩu mới</label>
                <input asp-for="MatKhau" type="password">
            </div>
            <div class="single-input">
                <label>Nhập lại mật khẩu mới</label>
                <input asp-for="XacNhanMatKhau" type="password">
            </div>
            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                    <span>Lưu thay đổi</span>
                </button>
            </div>
        </div>
    </form>
</div>
